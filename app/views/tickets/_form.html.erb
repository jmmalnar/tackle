<div class="columns wat-cf">
  <div class="column left">
    <div class="group">
      <%= f.label :title, "Title", :class => :label %>
      <%= f.text_field :title, :class => 'text_field' %>
      <span class="description">Ex: a simple text</span>
    </div>
  
    <div class="group">
      <%= f.label :description, "Description", :class => :label %>
      <%= f.text_area :description, :class => 'text_area' %>
      <span class="description">Ex: a simple text</span>
    </div>
  </div>
  <div class="column right">
    <div class="group">
      <%= f.label :fixed_in_versions_id, "Fixed in Version", :class => :label %>
      <%= f.collection_select(:select_fixed_in_versions_id, SelectFixedInVersion.all, :id, :value) %>
    </div>
  </div>
</div>
<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/icons/tick.png", :alt => "Save") %> <%= "Save" %>
  </button>
	<%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "Cancel") + "Cancel", tickets_path, :class => "button" %>
</div>