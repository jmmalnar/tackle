<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "List", users_path  %></li>
      <li><%= link_to "New User", new_user_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title">All Users</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">Username</th>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th class="last">Created</th>
        </tr>
        <% @users.each do |user| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= user.nickname %>
          </td>
          <td>
            <%= user.name %>
          </td>
          <td>
            <%= user.email %>
          </td>
          <td>
            <%= user.is_admin ? 'Admin' : 'User' %>
          </td> 
          <td>
            <%= "#{time_ago_in_words user.created_at} ago"%>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        <%= paginate @users, :outer_window => 1%>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'tickets/sidebar') -%>
