<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "List", tickets_path  %></li>
      <li><%= link_to "New Feature", new_ticket_path(:type => "Feature") %></li>
      <li><%= link_to "New Task", new_ticket_path(:type => "Task") %></li>
      <li><%= link_to "New Bug", new_ticket_path(:type => "Bug") %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title">All Tickets</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Title</th>
          <th>Type</th>
          <th>Status</th>
          <th class="last">Created</th>
        </tr>
        <% @tickets.each do |ticket| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= ticket.id %>
          </td>
          <td><!-- edit_ticket_path_by_type(ticket) -->
            <%= link_to ticket.title, edit_ticket_path(ticket)%>
          </td>
          <td>
            <%= ticket.type %>
          </td>
          <td>
            <%= t ticket.state%>
          </td>
          <td>
            <%= "#{time_ago_in_words ticket.created_at} ago"%>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        <%= paginate @tickets, :outer_window => 1%>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
