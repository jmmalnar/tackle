<!DOCTYPE html>
<html>
<head>
  <title>Tackle</title>
  <%= stylesheet_link_tag "web-app-theme/base", "web-app-theme/themes/drastic-dark/style", "web-app-theme/override"%>
  <%= javascript_include_tag :defaults%>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="container">
    <div id="header">
      <h1><a href="#">Tackle</a></h1>
        <% if current_user %>
        <div id="title-right">Logged in as <%= current_user.name %></div>
        <% end %>
      <div id="user-navigation">
        <ul class="wat-cf">
          <li><a href="#">Profile</a></li>
          <li><a href="#">Settings</a></li>
          <li><% if current_user %>
            <a href="/logout" class="logout">Logout</a>
          <% else %>
            <a href="/auth/github">Login</a>
          <% end %>
          </li>
        </ul>
      </div>
      <div id="main-navigation">
        <ul class="wat-cf">
          <li class="first<%= ' active' if params[:controller] == 'tickets' %>"><%= link_to "Tickets", tickets_path  %></li>
          <li><a href="#">Sprint</a></li>
          <li<%= ' class=active' if params[:controller] == 'users' %>><%= link_to "Users", users_path  %></li>
        </ul>
      </div>
    </div>    
    <div id="wrapper" class="wat-cf">
      <div class="flash">
        <% flash.each do |type, message| -%>
          <div class="message <%= type %>">
            <p><%= message %></p>
          </div>
        <% end -%>
      </div>
      <div id="main">
        <%= yield %>
        <div id="footer">
          <div class="block">
            <p>Copyright &copy; <%= Time.now.year %> Sage Online Ticketing.</p>
          </div>      
        </div>
      </div>
      <div id="sidebar">
        <%= yield :sidebar %>
      </div>
    </div>    
  </div>
</body>
</html>
