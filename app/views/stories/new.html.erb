<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "List", tickets_path  %></li>
      <li class="active"><%= link_to "New Story", new_story_path %></li>
      <li><%= link_to "New Task", new_task_path %></li>
      <li><%= link_to "New Bug", new_bug_path %></li>
    </ul>
  </div>          
  <div class="content">            
    <h2 class="title">New  Story</h2>
    <div class="inner">
      <%= form_for :story, :url => stories_path, :html => { :class => :form } do |f| -%>
        <%= render :partial => "tickets/form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'tickets/sidebar') -%>