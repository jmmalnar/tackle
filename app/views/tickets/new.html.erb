<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "List", tickets_path  %></li>
      <li <%= params[:type] == "Feature" ? 'class=active' : '' %>><%= link_to "New Feature", new_ticket_path(:type => "Feature") %></li>
      <li <%= params[:type] == "Task" ? 'class=active' : '' %>><%= link_to "New Task", new_ticket_path(:type => "Task") %></li>
      <li <%= params[:type] == "Bug" ? 'class=active' : '' %>><%= link_to "New Bug", new_ticket_path(:type => "Bug") %></li>
    </ul>
  </div>          
  <div class="content">            
    <h2 class="title">New  <%= params[:type] %></h2>
    <div class="inner">
      <%= form_for :ticket, :url => tickets_path(:type => params[:type]), :html => { :class => :form } do |f| -%>
        <%= render :partial => "tickets/form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'tickets/sidebar') -%>