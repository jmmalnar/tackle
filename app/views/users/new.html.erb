<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "List", users_path  %></li>
      <li class="active"><%= link_to "New User", new_user_path %></li>
    </ul>
  </div>          
  <div class="content">            
    <h2 class="title">New  User</h2>
    <div class="inner">
      <%= form_for :user, :url => users_path, :html => { :class => :form } do |f| -%>
        <div class="columns wat-cf">
          <div class="column left"> 
            <div class="group">
              <%= f.label :nickname, "GitHub Username:", :class => :label %>
              <%= f.text_field :nickname, :class => 'text_field' %>
            </div>   
            <div class="group">
              <%= f.label :email, "Email:", :class => :label %>
              <%= f.text_field :email, :class => 'text_field' %>
            </div>   
          </div>
          <div class="column right">
            <div class="group">
              <%= f.label :is_admin, "Role", :class => :label %>
              <%= f.radio_button :is_admin, 'true' %> 
              <%= f.label :is_admin, 'Admin', :value => 'true', :class => :radio %>
              <%= f.radio_button :is_admin, 'false', :checked => true %>
              <%= f.label :is_admin, 'User', :value => 'false', :class => :radio %>
            </div>
          </div>
        </div>
        <div class="group navform wat-cf">
          <button class="button" type="submit">
            <%= image_tag("web-app-theme/icons/tick.png", :alt => "Save") %> <%= "Save" %>
          </button>
        	<%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "Cancel") + "Cancel", users_path, :class => "button" %>
        </div>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'tickets/sidebar') -%>